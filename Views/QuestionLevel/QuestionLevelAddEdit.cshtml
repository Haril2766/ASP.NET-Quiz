@model QuestionLevelModel

<main id="main" class="main">
    <div class="container">
        <div class="pagetitle">
            <h1>Question Level Add</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="DashboardView">Home</a></li>
                    <li class="breadcrumb-item">Question Level</li>
                    <li class="breadcrumb-item active"><a asp-controller="QuestionLevel" asp-action="QuestionLevelAdd">QuestionLevelAdd</a></li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add New Question </h5>
                <form class="row g-3" asp-controller="QuestionLevel" asp-action="QuestionLevelSave">
                    <input hidden asp-for="QuestionLevelID" />
                    <div class="col-12">
                        <label for="inputquesation4" asp-for="QuestionLevel" class="form-label"><span class="text-danger">*</span>Question Level</label>
                        @* <input type="text" class="form-control" id="inputquesation4"> *@
                        <input type="text" asp-for="QuestionLevel" class="form-control  " required placeholder="Enter Question Level ">
                        <span asp-validation-for="QuestionLevel" class="text-danger"></span>
                    </div>

                    @* <div class="col-12"> *@
                    @*     <label for="inputQuestionsLevel" asp-for="UserID" class="form-label"><span class="text-danger">*</span>User ID</label> *@
                    @*     <input type="number" asp-for="UserID" class="form-control" id="inputQuestions4"> *@
                    @*     <span asp-validation-for="UserID" class="text-danger"></span> *@
                    @* </div> *@

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label class="form-label">User Name</label>
                        <select asp-for="UserID" class="form-select">
                            <option value="">-- Select User Name --</option>
                            @foreach (var level in ViewBag.User)
                            {
                                <option value="@level.UserID">@level.UserName</option>
                            }
                        </select>
                        <span asp-validation-for="UserID" class="text text-danger"></span>
                    </div>


                    @* <div class="col-12"> *@
                    @*     <label for="inputQuestions4" class="form-label">User ID</label> *@
                    @*     @* <input type="number" class="form-control" id="inputQuestions4"> *@ 
                    @*     <input type="text" class="form-control" required placeholder="User Name"> *@
                    @* </div> *@
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-secondary" asp-controller="QuestionLevel" asp-action="QuestionLevelList">Cancel</a>
                    </div>
                </form><!-- Vertical Form -->
            </div>
        </div>
    </div>
</main>