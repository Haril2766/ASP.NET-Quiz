@model QuizeManagement.Models.QuizModel

<main id="main" class="main">
    <div class="container">
        <div class="pagetitle">
            <h1>Quiz Add</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="DashboardView">Home</a></li>
                    <li class="breadcrumb-item">Quiz</li>
                    <li class="breadcrumb-item active"><a asp-controller="Quiz" asp-action="QuizAdd">QuizList</a></li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add New Quiz </h5>
                <form class="row g-3" asp-controller="Quiz" asp-action="QuizSave" method="post">
                    <input hidden asp-for="QuizID" />
                    <div class="col-12">
                        <label for="inputName4" asp-for="QuizName" class="form-label"><span class="text-danger">*</span>Quiz Name</label>
                        <input type="text" asp-for="QuizName" class="form-control" id="inputName4" placeholder="Enter Quie Name">
                        <span asp-validation-for="QuizName" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label for="inputQuestions4" asp-for="TotalQuestions" class="form-label"><span class="text-danger">*</span>TotalQuestions</label>
                        <input type="number" asp-for="TotalQuestions" class="form-control" id="inputQuestions4">
                        <span asp-validation-for="TotalQuestions" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label class="form-label">User Name</label>
                        <select asp-for="UserID" class="form-select">
                            <option value="">-- Select User Name --</option>
                            @foreach (var level in ViewBag.User)
                            {
                                <option value="@level.UserID">@level.UserName</option>
                            }
                        </select>
                        <span asp-validation-for="UserID" class="text text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputdate" asp-for="QuizDate" class="form-label"><span class="text-danger">*</span>QuizDate</label>
                        <input type="date" asp-for="QuizDate" class="form-control" id="inputdate" min="@DateTime.Today.ToString("yyyy-MM-dd")">
                        <span asp-validation-for="QuizDate" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-secondary" asp-controller="Quiz" asp-action="QuizList">Cancel</a>
                    </div>
                </form><!-- Vertical Form -->
            </div>
        </div>
    </div>
</main>
